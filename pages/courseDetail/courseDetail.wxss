.main {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.main .top {
  width: 100%;
}

.main .top image {
  width: 100%;
  height: 300rpx;
}

.main .courseIntroduction {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  background-color: white;
}

.main .courseIntroduction .courseIntroduction_title {
  font-size: 40rpx;
  color: #666465;
}

.main .courseIntroduction .courseIntroduction_share {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  color: #ccc;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ccc;
  font-size: 28rpx;
}

.main .courseIntroduction .courseIntroduction_share .courseIntroduction_share_button {
  display: flex;
  position: relative;
}

.main .courseIntroduction .courseIntroduction_share .courseIntroduction_share_button .share {
  display: flex;
  background-color: transparent;
  border: none;
}

.main .courseIntroduction .courseIntroduction_share .courseIntroduction_share_button .share .iconfont {
  font-size: 24rpx;
}

.main .courseIntroduction .courseIntroduction_content {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.main .courseIntroduction .courseIntroduction_content text {
  color: #a1a1a1;
  margin-left: 10rpx;
}

.main .courseIntroduction .courseIntroduction_content .teacher {
  display: flex;
  flex-direction: column;
}

.main .courseIntroduction .courseIntroduction_content .teacher .courseIntroduction_content_item_content {
  display: flex;
}

.main .courseIntroduction .courseIntroduction_content .teacher .courseIntroduction_content_item_content .teacher_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main .courseIntroduction .courseIntroduction_content .teacher .courseIntroduction_content_item_content .teacher_item image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 10px 0;
}

.main .courseIntroduction .courseIntroduction_content .teacher .courseIntroduction_content_item_content .teacher_item text {
  font-size: 12px;
}

.main .harvest {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  background-color: white;
  padding: 40rpx 30rpx;
}

.main .harvest .harvest_title {
  display: flex;
  font-size: 36rpx;
  margin-bottom: 20rpx;
  color: #666465;
}

.main .harvest .harvest_content {
  display: flex;
  flex-direction: column;
}

.main .harvest .harvest_content .harvest_content_item {
  display: flex;
  font-size: 32rpx;
  align-items: center;
  margin-top: 4rpx;
}

.main .harvest .harvest_content .harvest_content_item text {
  color: #ffa502;
}

.main .harvest .harvest_content .harvest_content_item .iconfont {
  color: #2ed573;
  font-size: 28rpx;
  margin-right: 16rpx;
}
