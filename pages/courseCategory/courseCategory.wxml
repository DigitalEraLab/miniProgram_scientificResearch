<view class="main" 
  >
<scroll-view class="top" id="top">
    <scroll-view class="scroll-box" scroll-x scroll-with-animation
  scroll-into-view="{{toView}}" bindtouchstart="touchStart"
  bindtouchend="touchEnd">
    <view wx:for="{{category0}}" wx:key="index" class="card-box" id="card_{{index}}">
      <view class="card">
      <view class="card_top">
        <view>{{item}}</view>
        <view class="course_intro">
            课程简介
        </view>
        <view class="toDetail">
           <text bindtap="scrollTo">了解详情</text> 
           <view class="iconfont icon-xiangyou1">
               
           </view>
        </view>
      </view>
        <view class="card_bottom">
            <view class="iconfont icon-icon-angle-double-bottom">
                
            </view>
        </view>
      </view>
    </view>
</scroll-view>
    <view class="top_title {{isFixed?'top_title_fixed':''}}">
        <block wx:for="{{category0}}" wx:key="index">
            <view class="top_title_item {{index==currentView?'top_title_active':''}}" bindtap="toTitleItem" data-toTitleItem="{{index}}">
               <text>{{item}}</text> 
            </view>
        </block>
    </view>

</scroll-view>
<view class="content {{isFixed?'content_fixed':''}}">
        <view class="content_top {{isFixed?'content_top_active':''}}">
            <view class="content_top_title">
            <!-- <block wx:for="{{category1}}" wx:key="item">
            <view class="content_top_tile_item {{index==chooseSubIndex?'content_top_tile_item_active':''}}" bindtap="chooseSub" data-choosesub="{{index}}">
                  <text>{{item}}</text>  
                </view>
            </block> -->
            </view>
           
            <view class="content_top_content">
                <view class="allNum">
                    共{{course.length}}个课程
                </view>
                <view class="allType">
                    全部类型
                </view>
            </view>
        </view>
        <view class="content_center" wx:for="{{course}}" wx:key="index">
            <view class="content_item_content" bindtap="toCourseDetail">
                <view class="content_item_content_top">
                    <image src="/image/index/bg.jpg" mode=""/>
                    <view class="content_item_content_top_title">
                      <text>开始日期:{{item.startTime}}</text>  
                    </view>
                    <view class="content_item_content_top_content">
                        {{item.courseName}}
                    </view>
                    <view class="content_item_content_top_bottom">
                        <!-- <view class="iconfont icon-wode">
                            
                        </view> -->
                        <view>
                   导师院校:{{item.school}}
                        </view>
                        <view>
                            专家企业: {{item.enterprise}}
                        </view>
                    </view>
                </view>
                <view class="content_item_content_bottom">
                <view class="content_item_content_bottom_content">
                 剩余席位:{{item.surplus}}
                </view>
 
                
                </view>
              
            </view>
        </view>
    </view>
</view>